                {
                    Titulo = "Turmas Optativas Disponíveis", // Título customizado
                    Turmas = Model.TurmasOptativas.ToList() // .ToList() é bom aqui para garantir que é uma List<T>
                };
        @await Html.PartialAsync("_TurmasDisponiveis", turmasOptativasViewModel)
