<div class="gridDoida">
    @if (Model.Turmas != null && Model.Turmas.Any())
    {
        // Criar uma instância de TurmaListaViewModel para a partial view
        var turmasObrigatoriasViewModel = new TurmaListaViewModel
                {
                    Titulo = "Turmas Obrigatórias Disponíveis", // Título customizado
                    Turmas = Model.Turmas.ToList() // .ToList() é bom aqui para garantir que é uma List<T>
                };
        @await Html.PartialAsync("_TurmasDisponiveis", turmasObrigatoriasViewModel)
    }
    else
    {
        <p>Parabéns! Você não possui disciplinas obrigatórias pendentes.</p>
    }

    <hr />

    @if (Model.TurmasOptativas != null && Model.TurmasOptativas.Any())
