@model SPAA.App.ViewModels.DisciplinaListaViewModel

<div class="container my-3">
    <div class="row justify-content-center" style="width: 100%;">
        <div class="col-md-8" style="width: 100%;">
            <div class="card shadow-sm" style="border-radius: 1rem;">
                <div class="card-header" style="
                    color: #001D6C;
                    background-color: rgba(74, 144, 226, 0.4);
                    border-top-left-radius: 1rem;
                    border-top-right-radius: 1rem;
                    ">
                    @Model.Titulo
                </div>

                <div class="card-body p-0">
                    @if (Model.Disciplinas != null && Model.Disciplinas.Any())
                    {
                        <table class="table mb-0" style="border-collapse: separate; border-spacing: 0;">
                            <tbody style="display: block; max-height: 10rem; overflow-y: auto; width: 100%;">
                                @for (int i = 0; i < Model.Disciplinas.Count; i++)
                                {
                                    var disciplina = Model.Disciplinas[i];
                                    var isLast = (i == Model.Disciplinas.Count - 1);
                                    <tr style="display: table; width: 100%; table-layout: fixed;">
                                        <td style="@(isLast ? "border-bottom-left-radius: 1rem; border-bottom-right-radius: 1rem;" : "")">
                                            @disciplina.NomeDisciplina
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    }
                    else
                    {
                        <p class="m-3 text-muted">Nenhuma disciplina encontrada.</p>
                    }
                </div>
            </div>
        </div>
    </div>
</div>